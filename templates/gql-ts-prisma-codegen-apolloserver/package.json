{
  "name": "gql-ts-prisma-codegen-apolloserver",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev": "nodemon",
    "start": "node -r ts-node/register/transpile-only -r tsconfig-paths/register ./dist/src/index.js",
    "build": "tsc -p tsconfig.prod.json",
    "test": "yarn test:unit && yarn test:integration",
    "test:unit": "jest unit",
    "test:integration": "dotenv -e ./.env.test yarn generate:reset && dotenv -e ./.env.test jest int -i",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint:fix": "eslint --fix .",
    "generate": "graphql-codegen --config codegen.yml && rover subgraph introspect http://localhost:4001/graphql > ./src/graphql/generated/schema.graphql"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@apollo/federation": "0.35.1",
    "@apollo/subgraph": "0.3.1",
    "@graphql-codegen/core": "2.5.1",
    "@graphql-codegen/plugin-helpers": "2.4.2",
    "@prisma/client": "3.10.0",
    "apollo-server": "3.6.3",
    "dotenv-cli": "5.0.0",
    "dotenv-safe": "8.2.0",
    "graphql": "15.8.0"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "2.6.2",
    "@graphql-codegen/typescript": "2.4.5",
    "@graphql-codegen/typescript-resolvers": "2.5.2",
    "@types/dotenv-safe": "8.1.2",
    "@types/jest": "27.4.1",
    "@types/node": "17.0.21",
    "@typescript-eslint/eslint-plugin": "5.13.0",
    "@typescript-eslint/parser": "5.13.0",
    "eslint": "8.10.0",
    "eslint-config-airbnb-base": "15.0.0",
    "eslint-config-prettier": "8.4.0",
    "eslint-import-resolver-typescript": "2.5.0",
    "eslint-plugin-import": "2.25.4",
    "eslint-plugin-prettier": "4.0.0",
    "jest": "27.5.1",
    "jest-mock-extended": "2.0.4",
    "nodemon": "2.0.15",
    "prettier": "2.5.1",
    "prisma": "3.10.0",
    "ts-jest": "27.1.3",
    "ts-node": "10.6.0",
    "tsconfig-paths": "3.12.0",
    "typescript": "4.6.2"
  }
}
